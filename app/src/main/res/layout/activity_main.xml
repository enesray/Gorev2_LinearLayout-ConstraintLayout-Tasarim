<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewKodu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Kodu"></TextView>

    <EditText
        android:id="@+id/edtTxtKodu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"></EditText>

    <TextView
        android:id="@+id/txtViewTanimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Tanımı"></TextView>

    <EditText
        android:id="@+id/edtTxtTanimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/txtViewAktiviteTanimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Aktivite Tanımı"></TextView>

    <Spinner
        android:id="@+id/spinnerAktivite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"></Spinner>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewOncelik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Öncelik"></TextView>

        <TextView

            android:id="@+id/txtViewAktiviteStatusu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="159dp"
            android:text="Aktivite Statüsü" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/edtTxtOncelik"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"></EditText>

        <EditText
            android:layout_marginLeft="56dp"
            android:id="@+id/edtTxtAktiviteStatusu"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
        </EditText>


    </LinearLayout>
    <TextView
        android:id="@+id/txtViewİsEmriTipi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="İş Emri Tipi"></TextView>

    <EditText
        android:id="@+id/edtTxtİsEmirTipi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/txtViewtAdres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Adres">
    </TextView>

    <EditText
        android:id="@+id/edtTxtAdres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text">
    </EditText>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Geri"
        android:textColorHint="@color/white">
    </Button>

    <Button
        android:id="@+id/btnIleri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="157dp"
        android:hint="İleri"
        android:textColorHint="@color/white">
    </Button>
</LinearLayout>

</LinearLayout>